CC=gcc
CFLAGS=-D_GNU_SOURCE -std=gnu11 
LDFLAGS=-lm -lreadline -ldyncall_s
PROGRAM=gPlotter
SOURCES=$(shell find . -type f -name \*.c)
OBJECTS=$(SOURCES:%.c=%.o)

all: $(OBJECTS)
	$(CC) $(CFLAGS) $(OBJECTS) -o $(PROGRAM) $(LDFLAGS)

$(OBJECTS): %.o : %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) $(OBJECTS) $(PROGRAM)
